/*
C++ program to print the following star pattern.
Input : 5
Output :
    *
   **
  ***
 ****
*****
*/

#include <iostream>
using namespace std;
int main()
{
	int n,i,spaces,stars;
	cout<<"Enter number of rows : ";
	cin>>n;
	i=1;
	while (i <= n)
	{
		spaces = 1;
		while (spaces <= n-i)
		{
			cout<<' ';
			spaces = spaces + 1;
		}
		stars = 1;
		while (stars <= i)
		{
			cout<<'*';
			stars = stars + 1;
		}
		cout<<endl;
		i = i + 1;
	}
}
